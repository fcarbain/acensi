{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
<header class="d-flex align-items-center pb-3 mb-5 border-bottom">
    <h1>Student index</h1>
</header>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>NumEtud</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.FirstName }}</td>
                <td>{{ student.LastName }}</td>
                <td>{{ student.NumEtud }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-1" href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
